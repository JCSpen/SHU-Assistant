@{
}
<!-- Chat messages and recommendations -->
<div class="w-full h-3/4 grid grid-cols-4 grid-rows-1">
    <!-- Chat message display-->
    <div class="w-full h-full overflow-auto p-4 col-span-3 flex flex-col space-y-4 items-center border-r-2 border-secondary">
       
        @if (@ViewBag.MainTitle == null && @ViewBag.MainTextTitle == null && @ViewBag.Question == null)
        {
            <h1 class="text-4xl font-bold leading-tight">
                Hi!,Type something in the search bar so I can help you!
            </h1>
        }
        <h1 class="text-4xl font-bold leading-tight">
            @if (ViewBag.MainTitle != @ViewBag.MainTextTitle)
            {
                <p>MainTilte</p>

            }
        </h1>
        @if (@ViewBag.MainTextTitle != "You can sign-in to your IBM account by clicking : [here](https://login.ibm.com/)")
        {
            <h1 class="text-4xl font-bold leading-tight">
                <p>MainTitle Text</p>
            </h1>
        }
        @if (@ViewBag.MainTextTitle == "You can sign-in to your IBM account by clicking : [here](https://login.ibm.com/)")
        {
            <h1 class="text-4xl font-bold leading-tight">You can sign-in to your IBM account by clicking</h1>
            <a href="https://login.ibm.com/" target="_blank"
           class="btn btn-outline">
                <span class="w-full">Login</span>
                <svg aria-hidden="true"
                 class="w-6 h-6 ml-3"
                 fill="currentColor"
                 viewBox="0 0 20 20"
                 xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                      d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                </svg>
            </a>
        }
        <h1 class="text-4xl font-bold leading-tight">
        @if (@ViewBag.Anwser != @ViewBag.MainTextTitle && @ViewBag.Anwser != @ViewBag.MainTitle)
        {
            <p>Anwser</p>
        }
        </h1>

        <img src="~/public/AI_1.png" class="object-cover h-48 w-96 rounded-xl shadow-md"
             src="https://picsum.photos/400/400"
             alt=""
             loading="lazy">
        <!-- For a image -->
        @switch (ViewBag.Topic)
        {
            @case "AI":

                <img src="~/public/AI_1.png" class="object-cover h-48 w-96 rounded-xl shadow-md"
             src="https://picsum.photos/400/400"
             alt=""
             loading="lazy">

                break;
            @case "CLOUD":

                <img class="object-cover h-48 w-96 rounded-xl shadow-md"
             src="~/public/Cloud.png"
             alt=""
             loading="lazy" />
                break;
            @case "CYBER SECURITY":

                <img class="object-cover h-48 w-96 rounded-xl shadow-md"
             src="~/public/Cyber sec.png"
             alt=""
             loading="lazy" />
                break;
            @case "DESIGN THINKING":
                <img class="object-cover h-48 w-96 rounded-xl shadow-md"
             src="~/public/Design Thinking.png"
             alt=""
             loading="lazy" />

                break;


        }
        @if (@ViewBag.TitlesLinks != null)
        {

            @foreach (var entry in @ViewBag.TitlesLinks)
            {
                

                <a href="@entry.Value" target="_blank" class="btn btn-outline">
                    <span class="text-4xl font-bold leading-tight">Ai Begginiers</span>
                   
                        <img src="/public/logos/AI and Machine Learning Full Course (10 hours).png" alt="icon" class="w-10 h-10 object-contain rounded-full mx-auto mt-3">
                    
                    <svg aria-hidden="true" class="w-6 h-6 ml-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </a>
            }

        }
        <h1 class="text-4xl font-bold leading-tight">
            <p>Question</p>
        </h1>
        @if (@ViewBag.Labels != null)
        {
            @foreach (var label in @ViewBag.Labels)
            {
                <button id="myButton" type="button"
                class="inline-flex items-center justify-center p-5 text-base font-medium text-gray-500 rounded-lg bg-gray-50 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700 dark:hover:text-white"
                onclick="fillTextBox('Yes')">
                    <span class="w-full">Yes</span>
                    <svg aria-hidden="true"
                 class="w-6 h-6 ml-3"
                 fill="currentColor"
                 viewBox="0 0 20 20"
                 xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                      d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                    </svg>

                </button>
                <script>
                    function fillTextBox(label) {
                        document.getElementById('question').value = label;
                        document.querySelector('form').submit();
                    }
                </script>
            }

        }
    </div>

    <!-- Reccomendations display-->
    <div class="p-2">
        <h2 class="text-2xl font-bold text-center mb-4 p-4">Reccomednations:</h2>
        <div class="flex items-center justify-center flex-col gap-5">
            @if (@ViewBag.Recomendations != null)
            {
                @foreach (var rec in @ViewBag.Recomendations)
                {
                    <button id="myButton" type="button"
                    class="inline-flex items-center justify-center p-5 text-base font-medium text-gray-500 rounded-lg bg-gray-50 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:bg-gray-800 dark:hover:bg-gray-700 dark:hover:text-white"
                    onclick="fillTextBox('Test')">
                        <span class="w-full">Ai Beginners test</span>
                        <svg aria-hidden="true"
                     class="w-6 h-6 ml-3"
                     fill="currentColor"
                     viewBox="0 0 20 20"
                     xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                          d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                          clip-rule="evenodd"></path>
                        </svg>

                    </button>
                    <script>
                        function fillTextBox(label) {
                            document.getElementById('question').value = label;
                            document.querySelector('form').submit();
                        }
                    </script>
                }

            }
        </div>
    </div>
</div>

<!-- Form input -->

<div class="w-full h-1/4 flex items-center justify-center border-t-2 border-secondary">
    <form class="max-w-lg w-full">
        <div class="form-control w-full">
            <div class="input-group">
                <input type="text"
                       id="question"
                       name="userQuery"
                       placeholder="Search…"
                       class="input input-bordered w-full"
                       required />
                <button class="btn btn-square">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         class="h-6 w-6"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
            </div>
        </div>
    </form>
</div>